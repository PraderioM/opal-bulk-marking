{
    "manifest_version": 2,
    "name": "opal-bulk-marking",
    "version": "1.0",

    "description": "Adds buttons in Opal that allow bulk downloading of submissions and bulk upload of corrections and marks.",

    "icons": {
        "48": "icons/48.png",
        "96": "icons/96.png"
  },

  "content_scripts": [
    {
        "matches": ["https://bildungsportal.sachsen.de/*"],
        "js": ["./node_modules/plotly.js-dist/plotly.js", "./element_ids.js", "./text_handling.js", "./utils.js", "./bulk_download.js", "./bulk_upload.js", "./statistics.js", "./dom_editing.js", "./main.js"],
        "css": ["./styles.css"]
    }]
}
